<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_options_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paul.independenceproject.OptionsFragment"
    android:background="@drawable/boat_wallpaper">

        <TextView
            android:id="@+id/choose_options_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/choose_options_title"
            android:gravity="center_horizontal"
            android:textSize="55sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>


        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <info.hoang8f.widget.FButton
                android:id="@+id/breathing_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="@string/breathing_button_text"
                android:textSize="25sp"
                android:textColor="@color/white"
                fbutton:buttonColor="@color/FireBrick"
                fbutton:shadowColor="@color/white"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="40dp"/>

            <info.hoang8f.widget.FButton
                android:id="@+id/default_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="@string/madlib_button_text"
                android:textSize="25sp"
                android:textColor="@color/white"
                fbutton:buttonColor="@color/FireBrick"
                fbutton:shadowColor="@color/white"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_below="@+id/breathing_button"
                android:layout_marginBottom="40dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>

            <info.hoang8f.widget.FButton
                android:id="@+id/empathy_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="@string/quotes_button_text"
                android:textSize="25sp"
                android:textColor="@color/white"
                fbutton:buttonColor="@color/FireBrick"
                fbutton:shadowColor="@color/white"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/default_button"/>

        </RelativeLayout>


    </FrameLayout>
